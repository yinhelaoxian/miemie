.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center; /* 居中显示按钮 */
  min-height: 100vh;
  background: #f8f8f8;
  position: relative;
  z-index: 1;
}

.btn {
  background: #07c160;
  color: #fff;
  width: 80%;
  max-width: 300px;
  border-radius: 10px;
  padding: 15px;
  font-size: 18px;
  text-align: center;
  margin: 20px 0;
  z-index: 100; /* 高 z-index 防止被覆盖 */
}

.cropper-container {
  width: 95%;
  height: auto;
  position: relative;
  margin: 20px 15px 140px;
  touch-action: auto;
  z-index: 10;
}

we-cropper {
  width: 100%;
  height: auto;
  background: transparent;
  position: relative;
  z-index: 10;
}

.button-container {
  position: fixed;
  bottom: 20px;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  gap: 20px;
  z-index: 20;
}

.cancel {
  background: #999;
}