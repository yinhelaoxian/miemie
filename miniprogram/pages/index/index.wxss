.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.btn-take {
  width: 80%;
  margin: 40rpx 0;
  background-color: #4caf50;
  color: white;
  font-size: 32rpx;
  border-radius: 12rpx;
}

.cropper-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  background: #000;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  width: 100%;
  margin-top: 40rpx;
}

.btn-confirm, .btn-upload, .btn-retake {
  width: 60%;
  font-size: 28rpx;
  border-radius: 8rpx;
}

.btn-confirm { background-color: #2196f3; color: white; }
.btn-upload { background-color: #ff9800; color: white; }
.btn-retake { background-color: #9c27b0; color: white; }

.btn-upload[disabled] {
  background-color: #cccccc;
  opacity: 0.6;
}

.loading-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.loading-toast {
  background: rgba(255,255,255,0.9);
  padding: 30rpx 50rpx;
  border-radius: 16rpx;
  text-align: center;
  font-size: 30rpx;
  color: #333;
}