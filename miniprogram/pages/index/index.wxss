.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.btn-take {
  width: 80%;
  margin: 40rpx 0;
  background-color: #4caf50;
  color: white;
  font-size: 32rpx;
  border-radius: 12rpx;
}

.cropper-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  z-index: 999;
  display: flex;
  flex-direction: column;
}

.cropper-actions {
  position: absolute;
  bottom: 80rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  z-index: 10;
}

.btn-cancel, .btn-ok {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  border-radius: 40rpx;
  color: white;
}

.btn-ok {
  background: #007aff;
}

.btn-cancel {
  background: #f43f3f;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  width: 100%;
  margin-top: 40rpx;
}

.btn-upload, .btn-retake {
  width: 60%;
  font-size: 28rpx;
  border-radius: 8rpx;
  color: white;
}

.btn-upload { background: #ff9800; }
.btn-retake { background: #9c27b0; }

.btn-upload[disabled] {
  background: #ccc;
  opacity: 0.6;
}

.loading-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.loading-toast {
  background: rgba(255,255,255,0.9);
  padding: 30rpx 50rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #333;
}