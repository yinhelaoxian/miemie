.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.btn-take {
  width: 80%;
  margin: 40rpx 0;
  background-color: #4caf50;
  color: white;
  font-size: 32rpx;
  border-radius: 12rpx;
}

.cropper-wrapper {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.9); /* 改为半透明白色，避免全黑 */
  z-index: 999;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.result {
  margin-top: 20rpx;
  text-align: center;
}

.result-img {
  width: 250rpx;
  height: auto;
}

.result-tip {
  font-size: 28rpx;
  color: #4caf50;
  margin-top: 10rpx;
}

.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.loading-toast {
  background: rgba(255, 255, 255, 0.9);
  padding: 30rpx 50rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #333;
}