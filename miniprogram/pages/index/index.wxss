/* miniprogram/pages/index/index.wxss */
.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 60rpx;
  margin-top: 40rpx;
}

.take-photo-btn {
  width: 80%;
  height: 90rpx;
  font-size: 30rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  background-color: #45c01a;
  color: #fff;
  margin-bottom: 60rpx;
}

.cropper-container {
  width: 100%;
  height: calc(100vh - 300rpx);
  background-color: #fff;
  padding: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 40rpx;
  position: relative;
}

.crop-tip {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  margin: 20rpx 0;
}

.confirm-btn {
  width: 80%;
  height: 90rpx;
  font-size: 30rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  background-color: #07c160;
  color: #fff;
  position: fixed;
  bottom: 40rpx;
  left: 10%;
  z-index: 9999;
}

.preview-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  padding: 30rpx 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.preview-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.preview-img {
  width: 600rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  border: 1px solid #eee;
}

.temp-storage-tip {
  font-size: 24rpx;
  color: #45c01a;
  margin-bottom: 20rpx;
}

.upload-btn {
  width: 80%;
  height: 90rpx;
  font-size: 30rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  background-color: #07c160;
  color: #fff;
}