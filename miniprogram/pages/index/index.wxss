.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  min-height: 100vh;
  background: #f8f8f8;
}

.cropper-container {
  width: 90%; /* 缩小容器宽度，留出边距 */
  height: auto;
  position: relative;
  margin: 20px auto 120px; /* 上下左右居中，底部留空间给按钮 */
}

image-cropper {
  width: 100%; /* 裁剪框宽度占容器宽度 */
  height: 400px;
  background: transparent;
  position: relative;
  z-index: 10;
}

.button-container {
  position: fixed;
  bottom: 20px;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  gap: 20px;
  z-index: 20;
}

.btn {
  background: #07c160;
  color: #fff;
  width: 40%;
  border-radius: 5px;
  padding: 10px;
  text-align: center;
}

.cancel {
  background: #999;
}