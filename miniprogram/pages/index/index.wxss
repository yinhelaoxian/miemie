/* miniprogram/pages/index/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  min-height: 100vh;
  background: #f8f8f8;
}

.cropper-container {
  width: 95%; /* 稍微增大容器宽度，适应90%照片宽度 */
  height: auto;
  position: relative;
  margin: 15px auto 120px; /* 减小顶部边距，保持底部按钮空间 */
}

image-cropper {
  width: 100%; /* 裁剪框宽度占容器宽度 */
  height: auto; /* 自动调整高度 */
  background: transparent;
  position: relative;
  z-index: 10;
}

.button-container {
  position: fixed;
  bottom: 20px;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  gap: 20px;
  z-index: 20;
}

.btn {
  background: #07c160;
  color: #fff;
  width: 40%;
  border-radius: 5px;
  padding: 10px;
  text-align: center;
}

.cancel {
  background: #999;
}